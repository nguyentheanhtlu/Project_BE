{
    "compilerOptions": {
       "strictPropertyInitialization": false,
      "experimentalDecorators": true,
      "module": "commonjs",
      "target": "es6",
      "sourceMap": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
    
    "include": ["../**/*.ts"],
    "exclude": [
      "node_modules"
    ]
  }
  